<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="preferenceTheme">@style/Theme.Exodus.Preference</item>
    </style>
    
    <style name="Theme.Exodus.Preference" parent="PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_about</item>
    </style>

    <!-- Inherit base theme to allow overriding Light Theme as per API levels -->
    <style name="Theme.Exodus.Light" parent="BaseTheme">
        <item name="android:navigationBarColor">@color/colorAccentTheme</item>
        <item name="bottomNavigationStyle">@style/Theme.BottomNavigation.Light</item>
    </style>

    <style name="Theme.BottomNavigation.Light" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/colorAccentTheme</item>
    </style>

    <style name="Theme.Exodus" parent="Theme.Exodus.Light" />

</resources>
