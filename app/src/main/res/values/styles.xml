<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
    </style>

    <!-- Inherit main theme to allow overriding Base Theme as per API levels -->
    <style name="Theme.Exodus" parent="BaseTheme">
        <item name="bottomNavigationStyle">@style/Theme.BottomNavigation</item>
    </style>

    <style name="Theme.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">?attr/colorOnSecondary</item>
    </style>

</resources>
